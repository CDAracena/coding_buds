<div class="container py-5 languages_container">

  <% @languages.each do |language| %>
    <div class="row mx-auto">
      <div class="col-lg-12 text-center language_padding">
        Language Name:
        <%=language.name %>
      </div>
    </div>
    <div class="row mx-auto py-1">
      <div class="col-lg-12 text-center">
        Language Description:
        <%= language.description %>
      </div>
    </div>
    <div class="row mx-auto py-1">
      <div class="col-lg-12 text-center">
        <%= link_to 'Edit Language', edit_language_path(language) %> |


        <%= link_to 'Delete Language', language_path(language), method: :delete %>
      </div>
    </div>
  <% end %>
<div class="row mx-auto py-1">
  <div class="col-lg-12 text-center">
  <%= render 'admins/shared/adminlinks' %>
</div>
</div>

</div>
