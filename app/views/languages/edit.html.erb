<div class="container">

  <%= form_for @language do |f| %>
  <div class="row">
    <div class="col-lg-6">
      <%=f.label :name %>
      <%= f.text_field :name, class:'form-control' %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <%= f.label :description %>
      <%= f.text_field :description, class:'form-control'%>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <%= f.submit 'Edit Language' %>
    </div>
  </div>

<% end %>

</div>
