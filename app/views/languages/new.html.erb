<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1>
        Create A New Language
      </h1>
    </div>
  </div>
  <%= form_for @language do |f| %>
  <div class="row">
    <div class="col-lg-6 mx-auto">
      <%= f.label :name %>
      <%= f.text_field :name, class:'form-control' %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6 mx-auto">
      <%= f.label :description %>
      <%= f.text_field :description, class:'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6 mx-auto">
      <%=f.submit 'Create New Language', class:'btn' %>
    </div>

  </div>
<% end %>

</div>
